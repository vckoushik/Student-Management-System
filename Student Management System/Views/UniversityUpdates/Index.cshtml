@model IEnumerable<Student_Management_System.Models.UniversityUpdate>

@{
    ViewData["Title"] = "UniversityUpdates";
}

<h1>University Updates</h1>
@if (User.IsInRole("Advisor") || User.IsInRole("Admin"))
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header p-0 mx-3 mt-3 position-relative z-index-1">
                    <a href="javascript:;" class="d-block">
                        <img src=" @Html.DisplayFor(modelItem => item.Image)" class="img-fluid border-radius-lg">
                    </a>
                </div>

                <div class="card-body pt-2">
                    <span class="text-gradient text-primary text-uppercase text-xs font-weight-bold my-2">@Html.DisplayFor(modelItem => item.UpdateName)</span>
                    <a href="javascript:;" class="card-title h5 d-block text-darker">
                        @Html.DisplayFor(modelItem => item.Description)
                    </a>
                    <p class="card-description mb-4">
                        Date: @Html.DisplayFor(modelItem => item.Date)
                    </p>
                    @if (User.IsInRole("Advisor") || User.IsInRole("Admin"))
                   {
           
                   <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.UpdateId">Edit</a>
                   <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.UpdateId">Delete</a>
                  }
 
                </div>
            </div>
        </div>
    }
</div>


