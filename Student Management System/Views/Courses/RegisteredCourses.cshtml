@model IEnumerable<Student_Management_System.Models.CourseRegistration>

@{
    ViewData["Title"] = "Index";
}

<h1>Registered Courses</h1>


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CourseId)</th>
                <th>@Html.DisplayNameFor(model => model.RegistrationDate)</th>
                <th>@Html.DisplayNameFor(model => model.Course.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Course.TotalSeats)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody style="text-align:center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CourseId)</td>
                    <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Course.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Course.TotalSeats)</td>
                    <td>
                       
                        <a class="btn btn-danger btn-sm" asp-action="DropClass" asp-route-id="@item.Id">Drop</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
